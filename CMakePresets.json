{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "STV_BUILD_TESTS": "ON",
        "STV_BUILD_APP": "OFF"
      }
    },
    {
      "name": "windows-msvc",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-msvc-app",
      "inherits": "windows-msvc",
      "cacheVariables": {
        "STV_BUILD_APP": "ON"
      }
    },
    {
      "name": "macos-universal",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.0",
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-universal-app",
      "inherits": "macos-universal",
      "cacheVariables": {
        "STV_BUILD_APP": "ON"
      }
    },
    {
      "name": "linux-gcc",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-gcc-app",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "STV_BUILD_APP": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc",
      "configurePreset": "windows-msvc"
    },
    {
      "name": "windows-msvc-app",
      "configurePreset": "windows-msvc-app"
    },
    {
      "name": "macos-universal",
      "configurePreset": "macos-universal"
    },
    {
      "name": "macos-universal-app",
      "configurePreset": "macos-universal-app"
    },
    {
      "name": "linux-gcc",
      "configurePreset": "linux-gcc"
    },
    {
      "name": "linux-gcc-app",
      "configurePreset": "linux-gcc-app"
    }
  ],
  "testPresets": [
    {
      "name": "windows-msvc",
      "configurePreset": "windows-msvc",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "macos-universal",
      "configurePreset": "macos-universal",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-gcc",
      "configurePreset": "linux-gcc",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
